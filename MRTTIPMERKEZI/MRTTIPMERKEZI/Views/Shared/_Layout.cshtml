@{ 
    bool randevudayiz = ViewBag.RandevuAldayiz;
    bool girisYapilmis = true;
    if (Session["kullanici"] == null)
    {
        girisYapilmis = false;
    }
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- font awesome CSS -->
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/Contents/images/icon.ico")">
    <link rel="stylesheet" href="@Url.Content("~/Contents/css/all.css")">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Contents/css/bootstrap.css")">
    <!-- Lightbox CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Contents/css/lightbox.css")">
    <!-- style CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Contents/css/style.css")">


  
    <title>MRT TIP MERKEZİ</title>
</head>

<body>

    <!--nav section-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <button class="navbar-toggler" data-toggle="collapse" data-target="#nvbCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="#" class="navbar-brand">MRT </a>
            <div class="collapse navbar-collapse" id="nvbCollapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item" style="display:@(randevudayiz?"none":"block")">
                        <a class="nav-link" href="#headerSection">ANA SAYFA</a>
                    </li>
                    <li class="nav-item" style="display:@(randevudayiz?"none":"block")">
                        <a class="nav-link" href="#features">HAKKIMIZDA</a>
                    </li>
                    <li class="nav-item" style="display:@(randevudayiz?"none":"block")">
                        <a class="nav-link" href="#team">HEKİMLERİMİZ</a>
                    </li>
                    <li class="nav-item" style="display:@(randevudayiz?"none":"block")">
                        <a class="nav-link" href="#caseStudy">ÇALIŞMALARIMIZ</a>
                    </li>
                    <li class="nav-item" style="display:@(randevudayiz?"none":"block")">
                        <a class="nav-link" href="#contact">İLETİŞİM</a>
                    </li>
                    <li class="nav-item" style="display:@(randevudayiz?"block":"none")">
                        <a class="nav-link" href="@Url.Action("Index","Home")">ANA SAYFA</a>
                    </li>
                    <li class="nav-item" style="display:@(randevudayiz?"block":"none")">
                        <a class="nav-link" href="@Url.Action("GirisYap","Home")" style="display:@(girisYapilmis?"none":"block")">Giriş Yap</a>
                        <a class="nav-link" href="@Url.Action("Cikis","Home")" style="display:@(girisYapilmis?"block":"none")">Çıkış</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <!--nav section end-->
   
        @RenderBody()

   

    <!--footer Section   -->
    <section id="main-footer" class="py-2">
        <div class="container-fluid">

            <div class="row text-center">
                <div class="col-md-6 mx-auto">
                    <p class="lead">
                        &copy; 2019 Mrt Tıp Merkezi
                    </p>
                </div>
            </div>
        </div>
    </section>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="@Url.Content("~/Contents/js/jquery-3.4.1.js")"></script>
    <script src="@Url.Content("~/Contents/js/popper.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Contents/js/bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Contents/js/lightbox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Contents/js/smooth-scroll.min.js")"></script>
    <!--<script type="text/javascript" src="js/main.js"></script>-->
    <script>
        var scroll = new SmoothScroll('a[href*="#"]');
    </script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>







